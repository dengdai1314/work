<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/lcd_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">
            <TextView
                android:text="进入LCD 测试项"
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/lcd_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
            <ImageView
                android:id="@+id/poll_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/lcd_result"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:visibility="gone"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/result_lcd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="25dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/lcd_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LCD测试已完成。\n测试通过请通过音量+键进入摄像头测试。\n测试失败请通过音量-键进入摄像头测试。"
            android:textColor="#000"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</LinearLayout>