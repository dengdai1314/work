<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Show/Hide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:text="播放天气"
            app:layout_constraintStart_toEndOf="@+id/add"
            app:layout_constraintTop_toTopOf="parent"/>

    <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner_role"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add"
            tools:ignore="MissingConstraints"/>

    <Button
            android:id="@+id/change_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="切换性别"
            app:layout_constraintStart_toEndOf="@+id/spinner_role"
            app:layout_constraintBaseline_toBaselineOf="@+id/spinner_role"
    />


    <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner_scene"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_sex"
            tools:ignore="MissingConstraints"/>

    <Button
            android:id="@+id/change_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="切换场景"
            app:layout_constraintStart_toEndOf="@+id/spinner_scene"
            app:layout_constraintBaseline_toBaselineOf="@+id/spinner_scene"/>


    <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner_anim"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_scene"
            tools:ignore="MissingConstraints"/>

    <Button
            android:id="@+id/play_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="播放动作"
            app:layout_constraintStart_toEndOf="@+id/spinner_anim"
            app:layout_constraintBaseline_toBaselineOf="@+id/spinner_anim"/>


    <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner_ui"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_anim"
            tools:ignore="MissingConstraints"/>

    <Button
            android:id="@+id/show_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="显示UI"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_ui"/>


    <Button
            android:id="@+id/hide_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="隐藏UI"
            app:layout_constraintStart_toEndOf="@+id/show_ui"
            app:layout_constraintTop_toBottomOf="@+id/spinner_ui"/>

    <LinearLayout
            android:id="@+id/ll_3d"
            android:layout_width="430dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/play_animal"
            app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>